<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>RANDOM QUOTE MACHINE</title>
    <script>
      const QUOTEBANK = [
        {
          quote: "The easest day was yesterday",
          author: "JFK"
        }, {
          quote: "YOU WANT ME TO PUT THE HAMMA DOWN?!!!",
          author: "Thor"
        }, {
          quote: "Pray not for easier days, pray to become stronger men",
          author: "JFK"
        }, {
          quote: "I am a freemason who said some crazy S(-)17./",
          author: "Einstein"
        }, {
          quote: "GO...GO...GET TO THE CHOPPA NOW...and stop the war in Ukraine!",
          author: "Arnold"
        } 
      ]
      window.onload = init;
      function init() {
        generateQuote()
      }
       
      function generateQuote() {
        let quoteSize = QUOTEBANK.length;
        let randomIndex = Math.floor(Math.random() * quoteSize);
        let randomQuoteData = QUOTEBANK[randomIndex];
        
        let twitterLink = "https://twitter.com/intent/tweet?hashtags=quotes&amp;related=freecodecamp&amp;text=%22"; 
        
// Add the Quote
        let quoteInApiFormat = randomQuoteData.quote.replace(/ /g, "%20");
        twitterLink += quoteInApiFormat
// Add the Author
        let authorInApiFormat = randomQuoteData.author.replace(/ /g, "%20");
        twitterLink += authorInApiFormat
        
        document.getElementById("tweet-quote").href = twitterLink;
        document.getElementById("text").innerText = randomQuoteData.quote;
        document.getElementById("author").innerText = randomQuoteData.author;
      }
       
    </script>        
  </head>
  
  <body>
    <div class="container">
      <div class="row py-5">
        <div class="col-md-8 offset-md-2">
          <wrapper id="quote-box">
            <div class="card">
              <h5 class="card-header text-center">Test of Mettle Random Quote Machine</h5>
                <div class="card-body">
                  <h5 class="card-title">
                    <div id="text"></div>
                  </h5>
                  <p class="card-text">
                    <div id="author"></div>
                  </p>                 
               <button id="new-quote" onClick="generateQuote();" class="btn btn-block btn btn-success">New Quote</button>
               <a href="#" id="tweet-quote" target="_blank" class="btn btn-block btn btn-primary">Tweet Quote</a>
            </div>
          </div>
        </wrapper>
        </div>
      </div>     
    </div>
